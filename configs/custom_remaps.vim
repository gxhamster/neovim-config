" This config is used to store any remaps not related to any plugin

" Buffer navigation
map <leader>bn :bn<CR>
map <leader>bp :bp<CR>


" Fast saving
nmap <C-s> :w<CR>

" Fast pane switching
map <C-h> <C-w>h
map <C-l> <C-w>l
map <C-k> <C-w>k
map <C-j> <C-w>j


" Git stuff
nmap <leader>gb :Git blame<CR>
nmap <leader>gs :Git<CR>
nmap <leader>gl :Git log<CR>
